<h1>My Tasks</h1>

<ul>
    <% @tasks.each do |task| %>
        <li>
            <input type="checkbox" name="task_ids[]" value="<%= task.id %>" <%= task.completed ? 'checked' : '' %>>
            <%= link_to task.title, task_path(task) %>
        </li>
    <% end %>
</ul>

<%= link_to 'New Task', new_task_path %>